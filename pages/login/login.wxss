.login {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  text-align: center;
  background-color: #f8f8f8;
}

.login .top {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 130px;
}
.login .top text:nth-of-type(1) {
  font-size: 24px;
  font-weight: 700;
  color: #333333;
}
.login .top text:nth-of-type(2) {
  font-size: 12px;
  color: #a8a8a8;
  letter-spacing: 2px;
}

.login .top .logo {
  width: 108px;
  height: 108px;
  border-radius: 21px;
  box-shadow: 0px 5px 15px 0px rgba(0, 0, 0, 0.07);
}
.login .center {
  margin: 60px 0 100px 0;
}
.login .center image {
  width: 284px;
  height: 49px;
  border-radius: 23px;
  box-shadow: 0px 5px 15px 0px rgba(254, 160, 53, 0.47);
  margin-bottom: 10px;
}

.login .buttom {
  font-size: 10px;
  color: #a8a8a8;
}
