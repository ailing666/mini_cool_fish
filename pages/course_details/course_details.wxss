.course_detaily {
  background-color: #f8f8f8;
}

.course_detaily .detaily .video video {
  width: 375px;
  height: 217px;
}

.course_detaily .detaily .video .default-cover {
  position: relative;
  width: 375px;
  height: 217px;
}

.course_detaily .detaily .video .default-cover .cover {
  width: 375px;
  height: 217px;
}
.course_detaily .detaily .video .default-cover .play-icon {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.course_detaily .detaily .video .default-cover .play-icon image {
  width: 82px;
  height: 82px;
}
.course_detaily .detaily .video .default-cover .play-icon text {
  opacity: 0.83;
  text-align: center;
  color: #e9e9e9;
}

.course_detaily .detaily .card {
  position: relative;
  top: -15px;
  width: 375px;
  height: 226px;
  background: #ffffff;
  border-radius: 16px 16px 0px 0px;
  padding: 19px 16px;
  box-sizing: border-box;
}
.course_detaily .detaily .card .title {
  font-size: 24px;
  font-weight: 700;
  color: #343434;
}
.course_detaily .detaily .card .title text {
  float: right;
  font-size: 24px;
  font-weight: 700;
  color: #ee3939;
}
.course_detaily .detaily .card .introduction {
  margin: 14px 0;
  font-size: 12px;
  line-height: 19px;
  color: #818181;
}
.course_detaily .detaily .card .star image {
  width: 14px;
  height: 13px;
  vertical-align: middle;
}
.course_detaily .detaily .card .star text {
  font-size: 12px;
  color: #fe8e38;
}
.course_detaily .detaily .card .btn {
  margin: 10px 0;
}
.course_detaily .detaily .card .btn image:first-child {
  width: 284px;
  height: 46px;
  border-radius: 8px;
  box-shadow: 0px 5px 15px 0px rgba(254, 160, 53, 0.47);
  margin-right: 13px;
}
.course_detaily .detaily .card .btn image:last-child {
  width: 46px;
  height: 46px;
  border-radius: 8px;
  box-shadow: 0px 5px 15px 0px rgba(0, 0, 0, 0.07);
}
